<div class="container body-content">
    <div class="row">
        <h1>{{category.name}}</h1>
        {{#each articles}}
            <div class="col-md-6">
                <article>
                    <header>

                        <h2>{{ this.title }}</h2>
                    </header>
                    {{#if this.picture}}
                        <p>
                            <img src="{{this.picture}}" alt="" width="500" onerror="this.style.display='none'">
                        </p>
                    {{/if}}
                    <p>
                        {{ this.content }}
                    </p>

                    <small class="author">
                        {{ this.author.fullName }}
                    </small>
                    <p>
                        {{#each this.tags }}
                            <a class="btn btn-default btn-xs"
                               href="/tag/{{this.name}}">{{ this.name }}</a>
                        {{/each}}
                    </p>
                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs"

                               href="/article/details/{{this.id}}">Read more &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        {{/each}}
    </div>
</div>