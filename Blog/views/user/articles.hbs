<div class="container body-content">
    <h1>Articles by {{ user_author }}</h1>
    <div class="row">
        {{#each articles}}
            <div class="col-md-6">
                <article>
                    <header>
                        <h2>{{ this.title }}</h2>
                    </header>
                    {{#if this.picture}}
                        <p>
                            <img src="{{this.picture}}" alt="" width="500" onerror="this.style.display='none'">
                        </p>
                    {{/if}}
                    <p>
                        {{ this.content }}
                    </p>
                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs"
                               href="/article/details/{{this.id}}">Read
                                more &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        {{/ each}}
    </div>
</div>